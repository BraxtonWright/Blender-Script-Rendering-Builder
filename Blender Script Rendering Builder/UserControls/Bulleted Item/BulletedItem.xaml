<UserControl x:Class="Blender_Script_Rendering_Builder.UserControls.Bulleted_Item.BulletedItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blender_Script_Rendering_Builder.UserControls.Bulleted_Item"
             mc:Ignorable="d">
    <Grid>
        <ItemsControl >
            <BulletDecorator Width="Auto" Margin="5,0,0,0">
                <BulletDecorator.Bullet>
                    <Ellipse Fill="{Binding BulletFill}" Stroke="{Binding BulletOutline}" StrokeThickness="1" Width="8" Height="8"/>
                </BulletDecorator.Bullet>
                <TextBlock Margin="5, 0, 0, 0" TextWrapping="Wrap" Text="{Binding BulletText}"/>
            </BulletDecorator>
        </ItemsControl>
    </Grid>
</UserControl>
