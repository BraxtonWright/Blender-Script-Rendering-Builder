<Window x:Class="Blender_Script_Rendering_Builder.Windows.Error_List.wndErrorList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blender_Script_Rendering_Builder.Windows.Error_List"
        xmlns:BulletedItem ="clr-namespace:Blender_Script_Rendering_Builder.UserControls.Bulleted_Item"
        Background="{DynamicResource WindowBackgroundBrush}"
        mc:Ignorable="d"
        Title="Errors Discovered" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap">
            The following issues were discovered with the information.<LineBreak/>
            Please fix these issues and try again.
        </TextBlock>
        <StackPanel x:Name="spErrors" Grid.Row="1" Margin="0,5,0,0"/>
    </Grid>
</Window>
