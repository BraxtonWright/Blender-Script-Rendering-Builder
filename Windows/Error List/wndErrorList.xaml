<Window x:Class="Blender_Script_Rendering_Builder.Windows.Error_List.wndErrorList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blender_Script_Rendering_Builder.Windows.Error_List"
        mc:Ignorable="d"
        Title="Errors Discovered" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap" IsEnabled="False">
            The following issues were discovered with the information.<LineBreak/>
            Please fix these issues and try again.
        </TextBlock>
        <TreeView x:Name="tvErrorTree" Grid.Row="1" BorderThickness="0,0,0,0" Background="Transparent"/>
    </Grid>
</Window>
